{% extends "base.html.twig" %}

{% block title %}Jeara - Milestones{% endblock %}

{% block mainContainer %}
    <div>
        <h1>
            Milestones
            <button type="submit" onclick="location.href='/milestones/new/'" class="btn btn-primary">
                New Milestone
            </button>
        </h1>

        <div class="row">
            <div class="col-md-3">
                <h2>Milestone</h2>
            </div>
            <div class="col-md-3">
                <h2>Due</h2>
            </div>
            <div class="col-md-3">
                <h2>Progress</h2>
            </div>
        </div>

        {% for milestone in milestones %}
        <div class="row">
            <div class="col-md-3">
                <a href="/milestones/{{ milestone.milestoneId }}/">{{ milestone.name }}</a>
            </div>
            <div class="col-md-3">
                {{ milestone.prettyDueDate }}
            </div>
            <div class="col-md-3">
                {{ milestone.progress }} % complete
            </div>
        </div>
        {% endfor %}

    </div>
{% endblock %}
